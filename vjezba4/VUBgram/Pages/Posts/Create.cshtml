@page
@model CreateModel
@{
  ViewData["Title"] = "Postovi";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2>Unos novog posta</h2>
            <form method="post">
                <div class="form-group">
                    URL:
                    <input asp-for="Post.URL">
                </div>
                <div class="form-group">
                    Opis:
                    <input asp-for="Post.Description">
                </div>
                <div class="form-group">
                    Broj lajkova:
                    <input asp-for="Post.Likes">
                </div>
                <input type="submit" value="Unesi">
            </form>
          </div>
    </div>
</div>

